
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<section id="contact">
    <div class="container">
        <br />
        <div class="row">
            <div class="col-md-7">
                <h4><strong>BİZİ BULUN</strong></h4>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3175805.026024839!2d33.59409610245676!3d38.984003338859445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b0155c964f2671%3A0x40d9dbd42a625f2a!2zVMO8cmtpeWU!5e0!3m2!1str!2str!4v1525332539310" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
